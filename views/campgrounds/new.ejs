<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <!-- grouping content together -->
            <input class="form-control" type="text" id="title" name="campground[title]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <!-- grouping content together -->
            <input class="form-control" type="text" id="location" name="campground[location]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image url</label>
            <!-- grouping content together -->
            <input class="form-control" type="text" id="image" name="campground[image]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">â‚¬</span>
                <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price" aria-describedby="basic-addon1" name="campground[price]">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <!-- grouping content together -->
            <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Add Campground</button>
        </div>
        </form>
    <footer>
        <a href="/campgrounds">Back to Campgrounds</a>
    </footer>
    </div>
</div>