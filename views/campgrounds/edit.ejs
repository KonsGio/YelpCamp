<% layout('layouts/boilerplate') %> 
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT " method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <!-- grouping content together -->
                <input class="form-control" type="text" id="title" name="campground[title]"  required value="<%=campground.title%> " >
                    <div class="valid-feedback">
                        Title looks good!
                      </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <!-- grouping content together -->
                <input class="form-control" type="text" id="location" name="campground[location]"  required value="<%=campground.location%> ">
                    <div class="valid-feedback">
                        Location found!
                        </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add images</label>
                <input type="file" name="image" id="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¬</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="price" aria-describedby="basic-addon1" name="campground[price]" required value="<%=campground.price%> ">
                        <div class="valid-feedback">
                            Fair price!
                           </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <!-- grouping content together -->
                <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=campground.description%> </textarea>
                    <div class="valid-feedback">
                        Sounds interesting!
          </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Save</button>
            </div>
            </form>
        <footer>
            <a href="/campgrounds">Back to Campgrounds</a>
        </footer>
        </div>